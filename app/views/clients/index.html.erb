<div class="h-screen overflow-scroll flex">
  <div class="container mx-auto p-6 font-mono">
    <!--    <div class="md:flex max-w-full max-w-2xl mx-auto bg-white shadow-lg rounded-sm border border-gray-200">-->
    <div class="container mx-auto px-8">
      <h1  class="text-4xl font-bold pt-2">取引会社情報登録</h1>

      <hr>
      <%= link_to "案件登録", new_project_path, class: "inline-block bg-indigo-500 hover:bg-indigo-600 active:bg-indigo-700 focus-visible:ring ring-indigo-300 text-white text-sm md:text-base font-semibold text-center rounded-lg outline-none transition duration-100 px-8 py-3" %>
      <%= link_to "新規登録(取引会社情報)", new_client_path, class: "inline-block bg-indigo-500 hover:bg-indigo-600 active:bg-indigo-700 focus-visible:ring ring-indigo-300 text-white text-sm md:text-base font-semibold text-center rounded-lg outline-none transition duration-100 px-8 py-3"  %>
      <%= link_to "管理者画面", users_path, class: "inline-block bg-gray-200 hover:bg-gray-300 focus-visible:ring ring-indigo-300 text-gray-500 active:text-gray-700 text-sm md:text-base font-semibold text-center rounded-lg outline-none transition duration-100 px-3 py-3 hover:text-white" %>

      <table class="table-auto w-full">
        <tbody class="text-sm divide-y divide-gray-100">
        <tr  class="bg-indigo-500  bg-opacity-20">
          <th class="p-2 whitespace-nowrap">
            <div class="font-semibold text-center">取引先一覧</div>
          </th>
          <th class="p-2 whitespace-nowrap">
            <div class="font-semibold text-center">取引先会社</div>
          </th>
          <th class="p-2 whitespace-nowrap">
            <div class="font-semibold text-center">担当者</div>
          </th>
          <th class="p-2 whitespace-nowrap">
            <div class="font-semibold text-center">メールアドレス</div>
          </th>
          <th class="p-2 whitespace-nowrap">
            <div class="font-semibold text-center">電話番号</div>
          </th>
        </tr>
        <% @clients.each do |client| %>
          <tr>
            <td class="border border-indigo-500"><%= client.company_name %></td>
            <td class="border border-indigo-500"><%= client.staff %></td>
            <td class="border border-indigo-500"><%= client.email %></td>
            <td class="border border-indigo-500"><%= client.phone %></td>
            <td class="border border-indigo-500"><%= link_to "変更", edit_client_path(client.id) %></td>
          </tr>
        <% end %>
        </tbody>
      </table>


      <hr>
      <div>
        <%= link_to "Back", :back %>
      </div>
    </div>
  </div>
</div>