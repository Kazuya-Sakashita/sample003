<div class="container mx-auto px-8">
  <h1 class="text-4xl font-bold ">登録Skill一覧</h1>

  <%= link_to "基本情報管理画面にもどる", mypage_path(current_user.id),class:"m-2 bg-gray-200 hover:bg-gray-900 hover:text-white" %>
  <hr>

  <div class="py-4">
  <%= link_to "スキル追加", new_skill_management_path, class: "px-6 py-2 mt-4 border-2 text-white bg-blue-600 rounded-lg bg-opacity-70 hover:bg-blue-900" %><br>

  <table class="my-4 border-separate border border-blue-800">
    <tbody>
    <tr>
      <td class="border border-blue-400">スキル</td>
      <td class="border border-blue-400">スキルレベル</td>
      <td class="border border-blue-400">編集</td>
    </tr>

    <% @personal_skill.each do |s| %>
      <tr>
        <td class="border border-blue-400"><%= s.skill.skill %></td>
        <td class="border border-blue-400"><%= s.skill_level %></td>
        <td class="border border-blue-400">
          <div class="md:flex space-x-2 ">
          <%= link_to "編集", edit_skill_management_path(id: s.id), class: "px-6 py-2 mt-4 border-2 text-gray-500 bg-blue-600 rounded-lg bg-opacity-50 hover:bg-blue-900 hover:text-white" %>
          <%= link_to "削除", skill_management_path(id: s.id), method: :delete, data: { confirm: "削除しますか？" },class: "px-6 py-2 mt-4 border-2 text-gray-500 bg-blue-600 rounded-lg bg-opacity-50 hover:bg-blue-900 hover:text-white" %>
          </div>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
  </div>
</div>