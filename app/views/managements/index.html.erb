<h1>エンジニア稼働管理画面　一覧</h1>
<%= link_to "マイページ", mypages_path %>

<hr>
<%= link_to "新規登録", new_management_path %>
<table class="">
<tbody>

<tr>
  <td>名前</td>
  <td>稼働月</td>
  <td>稼働時間</td>
  <td>単価</td>
  <td>単位</td>
</tr>

<% @user_managements.each do |m| %>
    <tr>
    <td><%= m.user.name %></td>
    <td><%= m.date %></td>
    <td><%= m.uptime %></td>

    <% if m.user.wage.present? %> 
    <td><%= m.user.wage.unit_price %></td>
    <td><%= m.user.wage.unit %></td>
    <% else %>
    <td> 未設定です </td>
    <td> 未設定です </td>
    <% end %>
    </tr>

<% end %>
</tbody>
</table>

<hr>
<%= paginate @user_managements %>
<hr>

<div>
<%= link_to "Back", :back %>
</div>