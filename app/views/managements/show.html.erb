<div class="container mx-auto px-8">
  <h1 class="text-4xl font-bold text-center">稼働管理画面　一覧</h1>


  <%= link_to "基本情報管理画面にもどる", mypage_path(current_user.id) %>

  <hr>
  <div class="py-4">
    <%= button_to "稼働新規登録", new_management_path, { method: :get, class: "px-6 py-2 mt-4 text-white bg-blue-600 rounded-lg bg-opacity-50 hover:bg-blue-900" } %>
    <table class="">
      <tbody>

      <tr>
        <td>稼働月</td>
        <td>稼働時間</td>
        <td>単価</td>
        <td>単位</td>
        <td>項目</td>
      </tr>

      <% @user_management.each do |m| %>
        <tr>
          <td><%= m.date %></td>
          <td><%= m.uptime %></td>

          <% if m.user.wage.present? %>
            <td><%= number_to_currency(m.user.wage.unit_price, unit: "¥", format: "%u %n", precision: 0) %></td>

            <td><%= m.user.wage.unit %></td>
          <% else %>
            <td> 設定されていません</td>
            <td> 設定されていません</td>
          <% end %>
          <td>
            <% case m.management_state %>
            <% when 'request' %>
              <%= link_to "修正", edit_management_path(m.id) %></td>
            <% else %>
              承認済のため変更出来ません
            <% end %>
            </tr>

      <% end %>
      </tbody>
    </table>
  </div>
  <hr>
  <div>
    <%= link_to "Back", :back %>
  </div>
</div>