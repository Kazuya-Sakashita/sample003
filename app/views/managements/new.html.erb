<h1><p>稼働状況入力画面 </h1>

<h2>新規登録 </h2>
<%= form_with model: @management, url: managements_path, id: 'new_management', class: 'new_management', local: true do |f| %>
    <div class="field">
    <%= f.label :date %><br />
    <%= f.text_field :date, autofocus: true %>
    </div>

    <div class="field">
    <%= f.label :uptime %><br />
    <%= f.text_field :uptime, autofocus: true %>
    </div>

    <div class="field">
    <%= f.label :unit %><br />
    <%= f.select :unit, User.units.keys.map {|k| [k, k]}, {class: 'form-control', required: true } %>
    </div>

    <div class="actions">
    <%= f.submit "Create" %>
  </div>
<% end %>

<%= link_to "Back", :back %>