<h1><p>稼働状況入力画面 </h1>
<h2>新規登録 </h2>

<%= link_to "稼働管理一覧", managements_path %>
<hr>
<%= form_with model: @management, url: managements_path, id: 'new_management', class: 'new_management', local: true do |f| %>

    <%= f.hidden_field :user_id, :value => current_user.id %>
    <%= f.hidden_field :project, :value => 0 %>
    <div class="field">
    <%= f.label :date %><br />
    <%= f.select :date, @end_of_months %>
    </div>

    <div class="field">
    <%= f.label :uptime %><br />
    <%= f.text_field :uptime, autofocus: true %>
    </div>

    <div class="field">
    <%= f.label :unit %><br />
    <%= f.select :unit, User.units.keys.map {|k| [k, k]}, {class: 'form-control', required: true } %>
    </div>

    <div class="actions">
    <%= f.submit "稼働登録" %>
  </div>
<% end %>

<%= link_to "Back", :back %>