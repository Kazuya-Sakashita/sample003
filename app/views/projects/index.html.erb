<div class="h-screen overflow-hidden flex">
  <div class="container mx-auto p-6 font-mono">
<!--    <div class="md:flex max-w-full max-w-2xl mx-auto bg-white shadow-lg rounded-sm border border-gray-200">-->
    <h1 class="text-indigo-500 md:text-4xl xl:text-xl font-semibold mb-4 md:mb-6">案件管理画面　一覧</h1>

    <div class="md:flex mt-4 space-x-2">
      <%= link_to "取引先登録", new_client_path, class: "inline-block bg-indigo-500 hover:bg-indigo-600 active:bg-indigo-700 focus-visible:ring ring-indigo-300 text-white text-sm md:text-base font-semibold text-center rounded-lg outline-none transition duration-100 px-8 py-3" %>
      <%= link_to "新規登録", new_project_path, class: "inline-block bg-indigo-500 hover:bg-indigo-600 active:bg-indigo-700 focus-visible:ring ring-indigo-300 text-white text-sm md:text-base font-semibold text-center rounded-lg outline-none transition duration-100 px-8 py-3" %>
      <%= link_to "管理者画面にもどる", users_path, class: "inline-block bg-gray-200 hover:bg-gray-300 focus-visible:ring ring-indigo-300 text-gray-500 active:text-gray-700 text-sm md:text-base font-semibold text-center rounded-lg outline-none transition duration-100 px-3 py-3 hover:text-white" %>
    </div>
    <div class="md:flex mt-4">
      <table class="mt-10 table-auto w-full">
        <tbody>
        <tr class="bg-blue-500  bg-opacity-20">
          <th class="p-2 whitespace-nowrap">依頼会社</th>
          <th class="p-2 whitespace-nowrap">案件名</th>
          <th class="p-2 whitespace-nowrap">案件内容</th>
          <th class="p-2 whitespace-nowrap">必要スキル</th>
          <th class="p-2 whitespace-nowrap">スキルレベル</th>
          <th class="p-2 whitespace-nowrap">予算</th>
          <th class="p-2 whitespace-nowrap">編集</th>
        </tr>
        <% @projects.each do |project| %>
          <tr>
            <td class="border border-blue-400"><%= project.client.company_name %></td>
            <td class="border border-blue-400"><%= project.project_name %></td>
            <td class="border border-blue-400"><%= project.project_content %></td>
            <td class="border border-blue-400"><%= project.skills %></td>
            <td class="border border-blue-400"><%= project.skill_level %></td>
            <td class="border border-blue-400"><%= project.budget %></td>
            <td class="border border-blue-400"><%= link_to "変更", edit_project_path(project.id), class: "inline-block bg-indigo-500 hover:bg-indigo-600 active:bg-indigo-700 focus-visible:ring ring-indigo-300 text-white text-sm md:text-base font-semibold text-center rounded-lg outline-none transition duration-100 px-8 py-3" %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>

    <div>
      <%= link_to "Back", :back %>
    </div>
  </div>
  </div>
</div>