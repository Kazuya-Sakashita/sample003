<div class="md:flex bg-white py-6 sm:py-8 lg:py-12">
  <div class="max-w-screen-2xl px-4 md:px-8 mx-auto">
<h1 class="text-indigo-500 md:text-4xl xl:text-xl font-semibold mb-4 md:mb-6">案件管理画面　一覧</h1>

<hr>
<%= link_to "管理者画面", users_path %><br>
<%= link_to "取引先登録", new_client_path %><br><br><br>
<%= link_to "新規登録", new_project_path %>
<table>
    <tbody>
        <tr>
                <td>依頼会社</td>
                <td>案件名</td>
                <td>案件内容</td>
                <td>必要スキル</td>
                <td>スキルレベル</td>
                <td>予算</td>
        </tr>
        <% @projects.each do |project| %>
            <tr>
                <td><%= project.client.company_name %></td>
                <td><%= project.project_name %></td>
                <td><%= project.project_content %></td>
                <td><%= project.skills %></td>
                <td><%= project.skill_level %></td>
                <td><%= project.budget %></td>
                <td><%= link_to "変更", edit_project_path(project.id)%></td>
            </tr>
        <% end %>
    </tbody>
</table>


<hr>
<div>
<%= link_to "Back", :back %>
</div>
