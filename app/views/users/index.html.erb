<h1>All users</h1>

<% if current_user.present? %>
  <p>現在ログインしているユーザー:<%= current_user.email %></p>
  <%= link_to 'Sign_out', destroy_user_session_path, method: :delete %>
<% else %>
  <%= link_to 'Sign_in', new_user_session_path %>
<% end %>
<div>
<%= link_to 'エンジニア一覧', managements_path %>
</div>
<div>
<%= link_to "報酬条件管理", wages_path %><br>
</div>


<ul class="users">
  <% @users.each do |user| %>
    <li>
      <%= link_to user.email, users_path %>
    </li>
  <% end %>
</ul>